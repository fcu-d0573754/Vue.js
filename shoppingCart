<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>数字</title>
</head>
<body>
  <div id="app">
    <table>
      <thead>
        <tr class="text-center">编号</tr>
        <tr class="text-center">名称</tr>
        <tr class="text-center">单价</tr>
        <tr class="text-center">数量</tr>
        <tr class="text-center">总价</tr>
      </thead>
      <tbody>
        <list v-for="list in lists"
              :list="list"
              :total="total"
              @up="update"
              @down="update">
        </list>
        <sum :total="total"></sum>
      </tbody>
    </table>
  </div>

  <script src="http://unpkg.com/vue/dist/vue.min.js"></script>
  <script>
  Vue.component('sum',{
    template:`
    <div class"sumplay">
      <tr>
        <td colspan="5">总价：￥{{total}}</td>
      </tr>
    </div>
    `,
    props:["total"],

  });
  Vue.component('list',{
    template:`
    <div class="container">
      <tr>
        <td>{{list.num}}</td>
        <td>{{list.pname}}</td>
        <td>{{list.price}}</td>
        <td>
          <button @click="handleUp">+</button>
          {{list.count}}
          <button @click="handleDown">-</button>
        </td>
        <td>{{list.sub}}</td>
      </tr>
    </div>
    `,
    props:["list","total"],
    methods:{
      handleUp:function(){
        this.list.count+=1;
        this.list.sub+=this.list.price;
        this.total+=this.list.price;
        this.$emit("up",this.total);
      },
      handleDown:function(){
        if (this.list.count<=0) return;
        this.list.count-=1;
        this.list.sub-=this.list.price;
        this.total-=this.list.price;
        this.$emit("down",this.total);
      },
    }
  });

  var app = new Vue({
    el:"#app",
    data:{
      lists:[
        {num:1,pname:'apple',price:3,count:2,sub:6},
        {num:2,pname:'pear',price:4,count:3,sub:12},
        {num:3,pname:'banana',price:5,count:4,sub:20}
      ],
      total:38,
    },
    methods:{
      update:function(val){
        this.total=val;
      },
    }
  });
  </script>
</body>
</html>
